
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      let userDoc = /databases/$(database)/documents/users/$(request.auth.uid);
      return isSignedIn() && exists(userDoc) && get(userDoc).data.isAdmin == true;
    }

    // SECURITY: Prevent users from modifying protected fields (privilege escalation prevention)
    // NOTE: `providers` and `lastLogin` are intentionally NOT in protectedFields.
    // These are synced client-side by onAuthStateChanged (owner-level update of non-protected
    // fields, already permitted by existing rules). OAuth user doc creation happens via
    // Admin SDK (bypasses rules entirely).
    function userNotChangingProtectedFields() {
      let protectedFields = ['isAdmin', 'points', 'badLoginAttempts', 'id', 'createdAt'];
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      return !affectedKeys.hasAny(protectedFields);
    }

    // SECURITY: Validate user document structure on create
    function validUserCreate() {
      let data = request.resource.data;
      // New users cannot set themselves as admin or set points
      return data.get('isAdmin', false) == false
          && data.get('points', 0) == 0
          && data.get('badLoginAttempts', 0) == 0;
    }

    match /users/{userId} {
      // All signed-in users can read user documents (for standings page team names)
      allow get, list: if isSignedIn();
      // SECURITY: Users cannot create themselves as admin
      allow create: if isOwner(userId) && validUserCreate();
      // SECURITY: Users can only update non-protected fields; admins can update anything
      allow update: if (isOwner(userId) && userNotChangingProtectedFields()) || isAdmin();
      // Users should not delete their own accounts (handled by admin or server)
      allow delete: if isAdmin();

      match /predictions/{predictionId} {
        // All signed-in users can read predictions (league members can see each other's picks)
        // Using explicit get, list instead of read shorthand for clarity
        allow get, list: if isSignedIn();
        allow write: if isOwner(userId) || isAdmin();
      }
    }

    match /races/{raceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /race_results/{raceId} {
      allow get, list: if true;
      // SECURITY: Race results are written by server-side API only (Admin SDK bypasses rules)
      allow write: if false;
    }

    match /scores/{scoreId} {
      allow get, list: if true;
      // SECURITY: Scores are calculated and written by server-side API only (Admin SDK bypasses rules)
      allow write: if false;
    }

    match /drivers/{driverId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /app-settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /admin_configuration/{configId} {
      // All signed-in users can read (needed for single user mode check)
      // Only admins can write
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /audit_logs/{logId} {
      // Signed-in users can read their own audit logs (for audit page)
      // Admins can read all audit logs
      allow get, list: if isSignedIn();
      // Users can create audit entries only for themselves (prevents cross-user spoofing)
      // Security-critical audit entries are created server-side via Admin SDK
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if false;
    }

    // Email tracking collections - server-side only (Admin SDK bypasses rules)
    match /email_daily_stats/{dateId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    match /email_queue/{emailId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    // WhatsApp message queue - server-side only (Admin SDK bypasses rules)
    match /whatsapp_queue/{messageId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    match /email_logs/{logId} {
      allow get, list: if isAdmin();
      allow create: if false; // Server-side only via Admin SDK
      allow update, delete: if false;
    }

    match /presence/{userId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      // Owners can manage their own presence; admins can update any (for single user mode)
      allow create, delete: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Leagues - allows users to create private leagues and view standings filtered by membership
    match /leagues/{leagueId} {
      function isMember() {
        return request.auth.uid in resource.data.memberUserIds;
      }
      function isLeagueOwner() {
        return request.auth.uid == resource.data.ownerId;
      }
      // Check if update ONLY removes the current user from memberUserIds
      function onlySelfRemoval() {
        let oldMembers = resource.data.memberUserIds;
        let newMembers = request.resource.data.memberUserIds;
        // New list must be old list minus only the current user
        return newMembers.size() == oldMembers.size() - 1
            && !(request.auth.uid in newMembers)
            && request.auth.uid in oldMembers
            // Ensure no other fields changed except memberUserIds and updatedAt
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberUserIds', 'updatedAt']);
      }

      // Check if update ONLY adds the current user to memberUserIds (joining a league)
      function onlySelfAddition() {
        let oldMembers = resource.data.memberUserIds;
        let newMembers = request.resource.data.memberUserIds;
        // New list must be old list plus only the current user
        return newMembers.size() == oldMembers.size() + 1
            && request.auth.uid in newMembers
            && !(request.auth.uid in oldMembers)
            // Ensure no other fields changed except memberUserIds and updatedAt
            && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberUserIds', 'updatedAt']);
      }

      // GET: Single document access - member, global, or admin
      allow get: if isSignedIn() && (
        isMember() || resource.data.isGlobal == true || isAdmin()
      );

      // LIST: Allow queries for signed-in users
      // The array-contains query filters to user's leagues
      // Global leagues are readable by all
      // This is safe because query results are still filtered by Firestore
      allow list: if isSignedIn();

      // CREATE: Must set self as owner and initial member, cannot create global
      allow create: if isSignedIn()
        && request.resource.data.ownerId == request.auth.uid
        && request.auth.uid in request.resource.data.memberUserIds
        && request.resource.data.isGlobal == false;

      // UPDATE: Owner OR member leaving OR non-member joining
      allow update: if isSignedIn() && (
        isLeagueOwner() ||
        (isMember() && onlySelfRemoval()) ||
        onlySelfAddition()
      );

      // DELETE: Owner only (not global)
      allow delete: if isSignedIn() && isLeagueOwner() && resource.data.isGlobal != true;
    }

    // Collection group query support for predictions (used on Results page)
    match /{path=**}/predictions/{predictionId} {
      allow read: if isSignedIn();
    }

    match /mail/{mailId} {
      allow create: if false; // Server-side only via Admin SDK
      allow read, update, delete: if false;
    }

    // Email verification tokens - server-side only (Admin SDK)
    match /email_verification_tokens/{userId} {
      allow read, write: if false; // Server-side only via Admin SDK
    }

    // Error logs - server-side creates via Admin SDK, admin reads/updates/creates
    match /error_logs/{logId} {
      allow get, list: if isAdmin();
      allow create: if isAdmin(); // Admin SDK + admin client (CC export)
      allow update: if isAdmin(); // Allow admins to mark errors as resolved
      allow delete: if false;
    }

    // Feedback - users can create, admins can read/update/delete
    match /feedback/{feedbackId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // Login attempts - server-side only (Admin SDK bypasses rules)
    // Used for attack detection
    match /login_attempts/{attemptId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    // Attack alerts - admin only
    match /attack_alerts/{alertId} {
      allow read, write: if isAdmin();
    }

    // GUID: BACKUP_RULES-001-v03
    // [Intent] Firestore security rules for the backup_status collection.
    //          Grants admin-only read access so the BackupHealthDashboard can
    //          subscribe to backup_status/latest. Denies all client-side writes —
    //          only Cloud Functions (via Admin SDK, which bypasses rules) can write.
    // [Inbound Trigger] BackupHealthDashboard useDoc subscription (BACKUP_DASHBOARD-011).
    // [Downstream Impact] Without these rules, admin dashboard reads would be denied
    //                     (PX-7001). Write denial ensures no client can forge status.
    // Backup status - written by Cloud Functions (Admin SDK), read by admins
    match /backup_status/{docId} {
      allow get, list: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    // GUID: BACKUP_RULES-002-v03
    // [Intent] Firestore security rules for the backup_history collection.
    //          Grants admin-only read access for the backup history table in
    //          BackupHealthDashboard. Denies all client-side writes — history
    //          entries are written by Cloud Functions (Admin SDK) only.
    // [Inbound Trigger] BackupHealthDashboard useCollection subscription.
    // [Downstream Impact] Without these rules, admin dashboard history reads
    //                     would be denied. Write denial ensures no client can
    //                     forge history entries.
    // Backup history - written by Cloud Functions (Admin SDK), read by admins
    match /backup_history/{docId} {
      allow get, list: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }
  }
}
