
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // SECURITY: Prevent users from modifying protected fields (privilege escalation prevention)
    function userNotChangingProtectedFields() {
      let protectedFields = ['isAdmin', 'points', 'badLoginAttempts', 'id', 'createdAt'];
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      return !affectedKeys.hasAny(protectedFields);
    }

    // SECURITY: Validate user document structure on create
    function validUserCreate() {
      let data = request.resource.data;
      // New users cannot set themselves as admin or set points
      return data.get('isAdmin', false) == false
          && data.get('points', 0) == 0
          && data.get('badLoginAttempts', 0) == 0;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      // All signed-in users can list users (to see team names on teams page)
      allow list: if isSignedIn();
      // SECURITY: Users cannot create themselves as admin
      allow create: if isOwner(userId) && validUserCreate();
      // SECURITY: Users can only update non-protected fields; admins can update anything
      allow update: if (isOwner(userId) && userNotChangingProtectedFields()) || isAdmin();
      // Users should not delete their own accounts (handled by admin or server)
      allow delete: if isAdmin();

      match /predictions/{predictionId} {
        // All signed-in users can read predictions (league members can see each other's picks)
        allow read: if isSignedIn();
        allow write: if isOwner(userId) || isAdmin();
      }
    }

    match /races/{raceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /race_results/{raceId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /scores/{scoreId} {
      allow get, list: if true;
      // SECURITY: Scores should be written by server-side Cloud Function, not client
      // TODO: Move to allow write: if false once server-side scoring is implemented
      allow write: if isAdmin();
    }

    match /drivers/{driverId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /app-settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /admin_configuration/{configId} {
      allow read, write: if isAdmin();
    }

    match /audit_logs/{logId} {
      // Admins can read all audit logs
      allow get, list: if isAdmin();
      allow create: if (isSignedIn() && isOwner(request.resource.data.userId)) || request.resource.data.action == 'signup_email_queued';
      allow update, delete: if false;
    }

    // Separate collection for prediction submissions - visible to all signed-in users
    match /prediction_submissions/{submissionId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // Email tracking collections - server-side only (Admin SDK bypasses rules)
    match /email_daily_stats/{dateId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    match /email_queue/{emailId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    // WhatsApp message queue - server-side only (Admin SDK bypasses rules)
    match /whatsapp_queue/{messageId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK
    }

    match /email_logs/{logId} {
      allow get, list: if isAdmin();
      allow create: if false; // Server-side only via Admin SDK
      allow update, delete: if false;
    }

    match /presence/{userId} {
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      // Owners can manage their own presence; admins can update any (for single user mode)
      allow create, delete: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }

    // Collection group query support for predictions (used on Results page)
    match /{path=**}/predictions/{predictionId} {
      allow read: if isSignedIn();
    }

    match /mail/{mailId} {
      allow create: if false; // Server-side only via Admin SDK
      allow read, update, delete: if false;
    }

    // Error logs - server-side creates, admin reads
    match /error_logs/{logId} {
      allow get, list: if isAdmin();
      allow create: if isSignedIn(); // Allow signed-in users for client-side error logging
      allow update, delete: if false;
    }
  }
}
